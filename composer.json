{
    "name": "chinovn/flarum-button-bbcode",
    "description": "Custom BBCode to add some diffrent kinds of Button to forum posts.",
    "type": "flarum-extension",
    "license": "MIT",
    "support": {
        "forum": "https://discuss.flarum.org/",
        "issues": "https://github.com/chinovn/flarum-button-bbcode/issues",
        "source": "https://github.com/chinovn/flarum-button-bbcode"
    },
    "require": {
        "flarum/core": "^0.1.0-beta.6 || ^1.0.0"
    },
    "autoload": {
        "psr-4": {
            "ChinoVN\\Flarum\\Button\\BBcode\\": "src/"
        }
    },
    "extra": {
        "flarum-extension": {
            "title": "Custom Button BBCode",
            "category": "feature",
            "icon": {
